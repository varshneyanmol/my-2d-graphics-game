package com.rain.entity.mob;

import com.rain.entity.Entity;
import com.rain.graphics.Sprite;

public abstract class Mob extends Entity {

	protected Sprite sprite;
	protected int dir = 0;
	protected boolean moving = false;

	public void move(int xa, int ya) { // these 'xa' and 'ya' variables will be passed three values i.e; 1,0,-1;

		if (xa > 0) dir = 1; // 1 is for east direction or moving right.
		if (xa < 0) dir = 3; // 3 is for west direction or moving left.
		if (ya > 0) dir = 2; // 2 is for south direction or moving down.
		if (ya < 0) dir = 0; // 0 is for north direction or moving up.

		if (!collision()) {
			x += xa;
			y += ya;
		}
	}

	public void update() {
	}

	public boolean collision() {
		return false;
	}

	public void render() {
	}
}
